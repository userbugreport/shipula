{
  "compilerOptions": {
    "lib": ["esnext"],
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": []
  }
}
