{
  "compilerOptions": {
    "lib": ["esnext"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "outDir": "lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
